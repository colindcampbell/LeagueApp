
<div id="new_team_modal">
	<div class="modal-header">
	    <%if !@team.errors.any? %><button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button><% end %>
	    <h4 class="modal-title" id="myModalLabel">( New Team ) <small> Add a team to <%= @league.name%></small></h4>
	</div>
	<div class="modal-body">

		<% if @team.errors.any? %>
		    <ul class="list-group">
		      <% @team.errors.full_messages.each do |message| %>
		        <li class="list-group-item list-group-item-danger col-sm-offset-1"><%= message %></li>
		      <% end %>
		    </ul>
		  <% end %>
		
		<%= form_for([@league,@team], :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
			<div class='form-group'>
				<label for="team-name" class='col-sm-3 control-label'>Team Name</label>
				<div class='col-sm-9'>
					<%= f.text_field :name, :class => 'form-control', :id => 'team-name', :placeholder => 'Name' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="home-city" class='col-sm-3 control-label'>Home City</label>
				<div class='col-sm-9'>
					<%= f.text_field :home_city, :class => 'form-control', :id => 'home-city', :placeholder => 'City' %>
				</div>
			</div>
			<div class='form-group'>
				<label for="mascot" class='col-sm-3 control-label'>Mascot</label>
				<div class='col-sm-9'>
					<%= f.text_field :mascot, :class => 'form-control', :id => 'mascot', :placeholder => 'Coach' %>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-offset-3 col-sm-9">
					<% if @team.errors.any? %>
						<%= f.submit "Submit", :class => 'btn btn-info' %>
						<%= link_to "Back", root_path, :class => 'btn btn-default' %>
					<% else %>
						<%= f.submit "Submit", :class => 'btn btn-info' %>
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<% end %>
				</div>
			</div>
		<% end %>
		
	</div>
	
	
</div>



